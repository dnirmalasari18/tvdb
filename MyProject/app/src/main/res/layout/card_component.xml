<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/cardImageHolder"
            android:layout_width="125dp"
            android:layout_height="125dp" />

        <TextView
            android:id="@+id/cardDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/cardImageHolder"
            android:text="firstaired - airedseason - director - rating"
            android:textSize="10sp"
             />

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/cardImageHolder"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardDetails"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/cardImageHolder"
            android:text="Description"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/cardStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardDescription"
            android:layout_marginStart="17dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/cardImageHolder"
            android:text="Star 1\nStar 2"
            android:textSize="12sp"
             />

    </RelativeLayout>

</androidx.cardview.widget.CardView>